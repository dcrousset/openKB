<div class="col-md-12">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<ol class="breadcrumb">
	  			<li><a href="{{app_context}}/">{{__ "Home"}}</a></li>
	 			<li><a href="{{app_context}}/Topics">{{__ "Topics"}}</a></li>
	  			<li class="active">{{__ "New topic"}}</li>
			</ol>
			<h1>{{__ "New topic"}}</h1>
			<form method="post" id="edit_form" action="{{app_context}}/topic_insert" data-toggle="validator">
                <div class="form-group">
                    <label>{{__ "Topic"}} *</label>
                    <input type="text" class="form-control" name="name" value="{{topic.name}}" required>
                </div>
                <div class="form-group">
                    <label>{{__ "Permalink"}}</label>
                    <input type="text" class="form-control" name="permalink" value="{{topic.permalink}}" required>
                </div>
                <div class="form-group">
                    <div class="pull-right">
                        <button type="submit" class="btn btn-primary">{{__ "Create"}}</button>
                    </div>
                </div>
            </form>
		</div>
	</div>
</div>
